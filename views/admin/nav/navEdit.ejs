<% include ../header %>
  <% include ../left %>
  <div id="main-content">
      <div class="content-box">
      <!-- Start Content Box -->
      <div class="content-box-header">
        <h3>添加·顶级导航</h3>
        <div class="clear"></div>
      </div>
      <!-- End .content-box-header -->
      <div class="content-box-content">
          <% if(message){%>
          <div class="notification <%= message%> png_bg"> <a href="#" class="close"><img src="/admin/images/icons/cross_grey_small.png" title="Close this notification" alt="close" /></a>
              <div> 保存成功! </div>
          </div>
          <% } %>


      	    <form action="navedit?id=<%=data._id%>" method="post">
            <fieldset>
            <p>
              <label>分类名称 :</label>
              <input class="text-input small-input" type="text" id="sort" name="sort"  value="<%= data.sort%>"/>
            </p>                  
           
            <p>
              <label>是否激活</label>
              <input type="radio" name="active" value="1"   <%= data.active ? 'checked' : ''%>/>
              是
              <input type="radio" name="active" value="0"  <%= data.active ? '' : 'checked'%> />
              否</p>
           
            <div class="secondNav">
               <h3>导航列表</h3>               
               <a href="javascript:void(0)" class="button listadd">新增一列</a>

                <% data.list.forEach(function(each,index){%>
               <p>
                <label>名称 :</label>
                <input class="text-input small-input" type="text"  name="list[<%= index%>][name]" value="<%= each.name%>" />
             
                <label>连接 :</label>
                <input class="text-input small-input" type="text"  name="list[<%= index%>][url]" value="<%= each.url%>"/>
                <a href="javascript:void(0)" class="listdel">删除此列</a>
              </p>

              <% })%>
              

            </div>
            
            <p>
             <input class="button" type="submit" value=" 保 存 " />
            </p>

            </fieldset>
            <div class="clear"></div>
            <!-- End .clear -->
          </form>      
      </div>
      <!-- End .content-box-content -->
    </div>
  
    <!-- End .content-box -->
    <div class="clear"></div>
	
  
