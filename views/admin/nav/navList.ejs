<% include ../header %>
  <% include ../left %>
  <div id="main-content">
    <!-- Page Head -->
    
    <div class="content-box">
      <!-- Start Content Box -->
      <div class="content-box-header">
        <h3>导航列表</h3>
        <div class="clear"></div>
      </div>
      <!-- End .content-box-header -->
      <div class="content-box-content">
        <form action="navdo" method="POST">
        <div class="tab-content default-tab">
          <!-- This is the target div. id must match the href of this div's tab -->
          <table>
            <thead>
              <tr>
                <th>
                  <input class="check-all" type="checkbox" />
                </th>
                <th>栏目名</th>      
                <th>栏目链接</th>
                <th>栏目状态</th> 
                <th>操作</th>            
              </tr>
            </thead>
            <tfoot>

              <tr>
                <td colspan="6">
                  <div class="bulk-actions align-left">
                    <select name="dropdown">
                      <option value="">选择</option>
                      <option value="del">删除</option>
                    </select>
                    <a class="button" href="javascript:void(0)" id="selectapply">应用</a>
                  </div>

                  <div class="pagination">

                   <a href="?page=1" title="首页">&laquo; 首页</a>

                   <a href="?page=<%= Math.max(pagination.currentpage*1 ,1)  %>" title="上一页">&laquo; 上一页</a>
                   <% for(var i=1;i<=pagination.sumpage;i++){%>
                   <a href="?page=<%=i%>" class="number <%= (pagination.currentpage+1) == i && 'current'%>" title="<%=i%>"><%=i%></a>
                   <% } %>
                   <a href="?page=<%= Math.min((pagination.currentpage*1+2),pagination.sumpage) %>" title="下一页">下一页 &raquo;</a>
                   <a href="?page=<%=pagination.sumpage%>" title="尾页">尾页 &raquo;</a> </div>
                  <!-- End .pagination -->
                  <div class="clear"></div>
                </td>
              </tr>
            </tfoot>
            <tbody>             
              <% navlist.forEach(function(li){%>
              <tr>
                <td>
                  <input type="checkbox" name="<%= li._id%>"/>
                </td>
                <td><%= li.sort%></td>               
                <td><a href="<%= li.href || ''%>" title="title"><%= li.url || ''%></a></td>
                <td><%= li.active%></td>
                <td>
                  <!-- Icons -->
                  <a href="navedit?id=<%=li._id%>" title="编辑"><img src="/admin/images/icons/pencil.png" alt="编辑" /></a></td>
              </tr>

                  <% li.list.forEach(function(each){%>
                <tr>
                  <td>
                    
                  </td>
                  <td> - - &nbsp;&nbsp; <%= each.name%></td>
                
                  <td><a href="<%= each.url || ''%>" title="title"><%= each.url || ''%></a></td>
                  <td><%= each.active || ''%></td>
                  <td>
                  <a href="subnavdel?id=<%=li._id%>&subid=<%=each._id%>" title="删除"><img src="/admin/images/icons/cross.png" alt="删除" /></a> </td>
                </tr>

              <% }) %>

              <% }) %>
             
            </tbody>
          </table>
        </div>
        <!-- End #tab1 -->
        </form>
      </div>
      <!-- End .content-box-content -->
    </div>
  
    <!-- End .content-box -->
    <div class="clear"></div>

  
    <div id="footer"> <small>
      <!-- Remove this notice or replace it with whatever you want -->
      &#169; Copyright iamxz | Powered by <a href="http://iamxz.com">iamxz</a> | <a href="#">Top</a> </small> </div>
    <!-- End #footer -->
  </div>
  <!-- End #main-content -->
<% include ../footer %>